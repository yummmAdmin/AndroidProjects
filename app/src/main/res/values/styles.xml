<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/app_color</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rectangular</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>

    <style name="BookEditTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>

    </style>

    <style name="PersonalEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="particularEditTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/_5sdp</item>

    </style>

    <style name="ProfileEditTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/edt_rectangular</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>

    <style name="TextviewStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TabTextviewStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:layout_marginLeft">@dimen/margin_02</item>-->
    </style>

    <style name="ResTabTextviewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:layout_marginLeft">@dimen/margin_02</item>-->
    </style>

    <style name="GridTextviewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
    </style>

    <style name="ResTextviewStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:layout_marginLeft">@dimen/margin_02</item>-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_color</item>
        <item name="colorControlActivated">@color/text_color</item>
        <item name="colorControlHighlight">@color/app_color</item>
    </style>

    <style name="AppTheme.CardTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/twitter_color</item>
        <item name="colorControlActivated">@color/twitter_color</item>
        <item name="android:textColor">@color/twitter_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>


</resources>
