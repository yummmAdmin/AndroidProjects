<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_125sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal">
                <com.digitaldestino.utils.CircleImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/img_dishes"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    app:civ_border_overlay="true"
                    android:src="@drawable/placeholder"
                    app:civ_border_color="@color/app_color"/>
                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noodle Pasta"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/myriadpro_bold"/>
                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$130"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/app_color"
                    android:fontFamily="@font/myriadpro_bold"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/view_color"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/text_decreaseItem"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="-"
                    android:gravity="center"
                    android:background="@drawable/red_cirlce"
                    android:textColor="@color/white"
                    android:fontFamily="@font/myriadpro_bold"/>
                <TextView
                    android:id="@+id/text_qty"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"
                    android:maxLength="3"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/myriadpro_bold"/>
                <TextView
                    android:id="@+id/text_increaseItem"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="+"
                    android:gravity="center"
                    android:background="@drawable/green_circle"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/myriadpro_bold"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:src="@drawable/delete"/>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>

