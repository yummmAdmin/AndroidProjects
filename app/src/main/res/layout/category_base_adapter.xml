<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_cat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:ellipsize="end"
        android:fontFamily="@font/myriadpro_bold"
        android:maxLines="2"
        android:text="Appetizers"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_15ssp" />

    <RelativeLayout
        android:id="@+id/menu_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_82sdp"
        android:layout_below="@+id/text_cat_name"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:gravity="center">

        <ImageView
            android:id="@+id/res_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:scaleType="fitXY"
            android:src="@drawable/image" />

        <LinearLayout
            android:id="@+id/main_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/res_image"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_dishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:fontFamily="@font/myriadpro_regular"
                    android:maxLines="2"
                    android:text="Madan Restaurant"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/myriadpro_regular"
                    android:maxLines="3"
                    android:text="Plot no-111  nsez noida 2013 phase-2"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/myriadpro_regular"
                    android:maxLines="2"
                    android:text="$20"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1.2"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_sale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/sale"
                    android:ellipsize="end"
                    android:fontFamily="@font/myriadpro_regular"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text=" 100 sale"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/star_yellow"
                    android:ellipsize="end"
                    android:fontFamily="@font/myriadpro_regular"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text=" 40+ Review"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linear_organic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_organic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text_organic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/myriadpro_it"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:text="@string/organic"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_vegan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_vegan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/myriadpro_it"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:text="@string/vegan"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11ssp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/menu_relative"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@color/view_color" />
</RelativeLayout>