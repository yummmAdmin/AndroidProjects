<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant_menu.Menu_Fragment">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp">
        <LinearLayout
            android:id="@+id/linear_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/_default"
                android:textColor="@color/white"
                android:fontFamily="@font/myriadpro_regular"
                android:background="@color/app_color"
                android:layout_weight="1"
                android:textSize="@dimen/_13ssp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/text_popular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/popular"
                android:textColor="@color/white"
                android:background="@color/res_info_color"
                android:layout_weight="1"
                android:fontFamily="@font/myriadpro_regular"
                android:layout_marginLeft="@dimen/_1sdp"
                android:textSize="@dimen/_13ssp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/text_special"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/special"
                android:textColor="@color/white"
                android:background="@color/res_info_color"
                android:layout_weight="1"
                android:fontFamily="@font/myriadpro_regular"
                android:layout_marginLeft="@dimen/_1sdp"
                android:textSize="@dimen/_13ssp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/text_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/_new"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/white"
                android:background="@color/res_info_color"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_1sdp"
                android:textSize="@dimen/_13ssp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_menu">
            <TextView
            android:id="@+id/text_no_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/myriadpro_regular"
            android:gravity="center"
            android:visibility="gone"
            android:text="No dishes in this category"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_18ssp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_dishes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        </LinearLayout>
    </RelativeLayout>
   </RelativeLayout>
