<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_item">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_restaurent"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/res_image"
            android:scaleType="fitXY"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                style="@style/GridTextviewStyle"
                android:id="@+id/text_restaurent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="French Fries"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@+id/img_restaurent"
                android:fontFamily="@font/myriadpro_bold"/>
            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plot no-111  nsez noida 2013 phase -2 "
                android:layout_toRightOf="@+id/img_res_logo"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/logo_grid"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/_11ssp"/>
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/view_color"/>
            <TextView
                android:id="@+id/text_slogen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_res_logo"
                android:fontFamily="@font/myriadpro_it"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:textSize="@dimen/_11ssp"/>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>