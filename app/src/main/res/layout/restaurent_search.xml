<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:id="@+id/relative_item">

        <ImageView
            android:id="@+id/img_restaurent"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_140sdp"
            android:scaleType="fitXY"/>
        <TextView
            style="@style/GridTextviewStyle"
            android:id="@+id/text_restaurent_name"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:layout_below="@+id/img_restaurent"
            android:fontFamily="@font/myriadpro_bold"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_restaurent_name"
            android:layout_below="@+id/img_restaurent"
            android:gravity="end">
        <ImageView
            android:id="@+id/img_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rate_a"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_res_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_below="@+id/text_restaurent_name"
            android:src="@drawable/logo_grid" />
        <TextView
            android:id="@+id/text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_res_logo"
            android:layout_below="@+id/text_restaurent_name"
            android:fontFamily="@font/myriadpro_regular"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/text_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:textColor="@color/app_color"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/img_res_logo"
            android:fontFamily="@font/myriadpro_regular"/>
        <TextView
            android:id="@+id/text_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/app_color"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLength="5"
            android:layout_below="@+id/img_res_logo"
            android:drawableLeft="@drawable/sale"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/text_dollar"
            android:fontFamily="@font/myriadpro_regular"/>
        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:textColor="#91B0F8"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/restu"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/text_sale"
            android:layout_below="@+id/img_res_logo"
            android:fontFamily="@font/myriadpro_regular"/>
    </RelativeLayout>
</RelativeLayout>